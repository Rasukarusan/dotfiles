{
  "diagnostic.enable": false,
  "coc.preferences.jumpCommand": "tabe",
  "list.autoResize": false,
  "list.normalMappings": {
    "<C-t>": "action:tabe",
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "swift": {
      "command": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/sourcekit-lsp",
      "filetypes": ["swift"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "tailwind-lsp": {
      "command": "tailwindcss-language-server",
      "args": ["--stdio"],

      "filetypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
      ],

      "rootPatterns": [
        "tailwind.config.js",
        "tailwind.config.ts",
        "postcss.config.js",
        "postcss.config.ts",
        "package.json",
        "node_modules",
        ".git"
      ],
      "settings": {
        "tailwindCSS": {
          "validate": true,
          "lint": {
            "cssConflict": "warning",
            "invalidApply": "error",
            "invalidScreen": "error",
            "invalidVariant": "error",
            "invalidConfigPath": "error",
            "invalidTailwindDirective": "error",
            "recommendedVariantOrder": "warning"
          },
          "classAttributes": ["class", "className", "classList", "ngClass"],
          "experimental": {}
        }
      }
    }
  },
  "tailwindCSS.headwind.runOnSave": false,
  "tailwindCSS.htmlLanguages": ["typescriptreact"],
  "snippets.extends": {
    "typescriptreact": ["typescript"]
  },
  "snippets.userSnippetsDirectory": "~/dotfiles/vim/UltiSnips",
  "coc.preferences.formatOnSaveFiletypes": ["go"],
  "jedi": {
    "enable": true,
    "startupMessage": false,
    "executable.command": "/usr/local/bin/jedi-language-server"
  }
}
