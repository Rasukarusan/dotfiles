{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(tmux:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Read(~/.zshrc)",
      "Read(~/.claude)",
      "Read(~/.config)",
      "WebFetch(domain:github.com)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(pnpm supabase db reset)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(brew:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  }
}
